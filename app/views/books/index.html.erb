<br>
<h1>This Library's Books</h1>
 
<table width="300" cellpadding="10" border="1">
  <tr>
    <th>Name</th>
    <th>Category</th>
	<th>Author</th>
	<th colspan="3">Actions</th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td><%= book.category %></td>
	  <td><%= book.author %></td>
	  <td><%= link_to 'Show', book_path(book) %></td>
	  <% if can? :manage, @book %>
	  <td><%= link_to 'Edit', edit_book_path(book) %></td>
	  <td><%= link_to 'Remove', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  <%end%>
    </tr>
  <% end %>
</table>